{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": ".",
      "target": "es6",
      "declaration": true,
      "removeComments": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "downlevelIteration": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "skipLibCheck": true,
      "module": "commonjs",
      "typeRoots": ["types/", "node_modules/@types"],
    },
    "include": ["./src"],
  }
  